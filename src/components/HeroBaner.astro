---
const {chanracter} = Astro.props
---

<style>
    .hero{
        --color-dark : color-mix(in srgb, var(--theme-color-dark), black 60%);
        --color-light : color-mix(in srgb, var(--theme-color-dark), white 10%);

        width: 100%;
        height: 350px;
        background-image: 
            linear-gradient(color-mix(in srgb, indigo, transparent 20%),
            color-mix(in srgb, deeppink, transparent 5%)),
            repeating-conic-gradient(
            var(--color-dark)0 15deg, 
            var(--color-light) 15deg 30deg);
        overflow: hidden;
        display: flex;
        justify-content: center;

        &:hover .amgo{
            transform: translateY(0);
        }

        & .amgo{
            /* width: 400px; */
            height: 250px;
            transform: translateY(-10px);
            transition: transform 0.5$ ease-in-out;
        }
    }

</style>

<header class="hero">
    <a href="/"><img src={"/images/" + chanracter} alt="huma" class="amgo"/></a>
</header>